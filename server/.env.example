# Server environment variables example
# Copy this file to .env and fill real secrets before running

PORT=4000
NODE_ENV=development
CLIENT_ORIGIN=http://localhost:5173

# MongoDB (local or cloud)
MONGO_URI=mongodb://localhost:27017/leave-app

# JWT / Auth
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=replace_with_another_secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (SMTP)
EMAIL_USER=no-reply@example.com
EMAIL_PASS=your_smtp_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM="Leave System" <no-reply@example.com>

# Account security settings
MAX_FAILED_ATTEMPTS=5
LOCKOUT_MINUTES=15
OTP_EXPIRE_MINUTES=3
COOKIE_SECURE=false

# Logging / Backup
LOG_ENCRYPTION_KEY=replace_with_random_key
BACKUP_DIR=./backups
TRUST_PROXY=false
RATE_LIMIT_MAX=200

# Optional: Sentry DSN
# SENTRY_DSN=
